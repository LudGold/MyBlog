<div class="latest-articles">
	{% for article in articles %}
		<div class="article-details">
			<h2>{{ article.title }}</h2>
			<p>{{ article.chapo|split(' ')|slice(0, 10)|join(' ') }}
				{% if article.chapo|split(' ')|length > 10 %}
					...
				{% endif %}
			</p>
			{% if article.updateDate %}
				<p class="date-style">Modifié le 
					{{ article.updateDate|date('d/m/Y') }}</p>
			{% else %}
				<p class="date-style">Publié le 
					{{ article.date|date('d/m/Y') }}</p>
			{% endif %}
		</div>
	{% endfor %}
</div>
