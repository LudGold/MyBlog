

{% block body %}
<div class="comment-block">
    <h2>Ajouter un commentaire</h2>
    <form action="traitement_commentaire.php" method="POST">
        <div class="form-group">
            <label for="nom">Nom :</label>
            <input type="text" id="nom" name="nom" placeholder="Entrez votre nom ici">
        </div>
        <div class="form-group">
            <label for="mail">E-mail :</label>
            <input type="email" id="mail" name="mail" placeholder="Votre e-mail">
        </div>
        <div class="form-group">
            <label for="commentaire">Commentaire :</label>
            <textarea id="commentaire" name="commentaire" rows="4" cols="50" placeholder="Saisissez votre commentaire ici"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Soumettre">
        </div>
    </form>
</div>
{% endblock %}