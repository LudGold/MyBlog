<table id="article_table" class="display">
	<thead>
		<tr>
			<th>Titre</th>
			<th class="none-mobile">Date de Modification</th>
			<th>Résumé</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		{% if articles is not null %}
			{% for article in articles %}
				<tr>
					<td>
						<a href="/article/{{ article.id }}" target="_blank">{{ article.title }}</a>
					</td>
					<td class="none-mobile">
						{% if article.updateDate %}
							{{ article.updateDate|date("d/m/Y") }}
							{% else %}
						{% endif %}
					</td>
					<td>{{ article.chapo }}</td>
					<td>
						<a href="/article/{{ article.id }}" target="_blank"></a>
						<a href="/admin/changeArticle/{{ article.id }}">
							<i class="fas fa-pencil-alt"></i>
						</a>
						<a href='/admin/deleteArticle/{{ article.id }}' onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?')">
							<i class="fas fa-trash"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		{% endif %}
	</tbody>
</table>
