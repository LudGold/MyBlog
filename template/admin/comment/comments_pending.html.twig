{% extends 'base.html.twig' %}

{% block style %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css"/>
{% endblock %}

{% block body %}
    <h2>Commentaires en attente de validation</h2>

    {% if pendingComments is not empty %}
        <table id="comments_pending_table" class="display">
            <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Date de Publication</th>
                    <th>Contenu</th>
                    <th>Email</th>
                    <th>Statut</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for comment in pendingComments %}
                    <tr>
                        <td>{{ comment.pseudo }}</td>
                        <td>{{ comment.date.format('Y-m-d H:i:s') }}</td>
                        <td>{{ comment.content }}</td>
                        <td>{{ comment.mail }}</td>
                        <td>{{ comment.status }}</td>
                        <td>
                            <form action="/admin/check-comment" method="POST">
                                <input type="hidden" name="commentId" value="{{ comment.id }}">

                                <select name="action">
                                    <option value=""></option>
                                    <option value="validate">Valider</option>
                                    <option value="reject">Rejeter</option>
                                </select>

                                <button type="submit">Soumettre</button>
                            </form>
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary view-comment-btn" data-toggle="modal" data-comment="{{ comment.content }}">Détails du commentaire</button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun en attente d'approbation.</p>
    {% endif %}

    <!-- Modal pour afficher les détails d'un commentaire -->
    <div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel" aria-hidden="true">
        ...
    </div>

    {% block js %}
        {{ parent() }}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script src="../js/datatable_init.js"></script>
    {% endblock %}
{% endblock %}
