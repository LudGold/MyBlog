{% endblock %}
{% block body %}
    
    {% for user in users %}
        <div>
            <p>{{ user.lastname }} {{ user.firstname }} - {{ user.mail }}</p>
            <form action="/admin/user/addRole" method="post">
                <input type="hidden" name="user_id" value="{{ user.id }}">
                <label for="role">Role:</label>
                <select name="role" id="role">
                <option value="member" {% if user.role == 'member' %}selected{% endif %}>Utilisateur</option>
                <option value="admin" {% if user.role == 'admin' %}selected{% endif %}>Administrateur</option>
                </select>
                <button type="submit">Mettre Ã  jour</button>
            </form>
            <hr>
        </div>
    {% endfor %}
{% endblock %}

